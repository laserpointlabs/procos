# ProcOS Environment Configuration Template
# Copy this file to .env and customize as needed

# =============================================================================
# Core ProcOS Settings
# =============================================================================
PROCOS_ENV=development
PROCOS_INSTANCE_ID=procos-dev-001
PROCOS_VERSION=1.0.0
LOG_LEVEL=INFO
FILE_LOG_LEVEL=DEBUG

# =============================================================================
# Camunda Engine Configuration
# =============================================================================
CAMUNDA_BASE_URL=http://localhost:8080
CAMUNDA_ENGINE_NAME=default

# =============================================================================
# Process Deployment Settings
# =============================================================================
PROCESS_DEPLOYMENT_PATH=./src/processes
AUTO_DEPLOY_PROCESSES=true

# =============================================================================
# Health Monitoring
# =============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_ENABLED=true

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_ID=generic_worker_001
WORKER_MAX_TASKS=10
WORKER_LOCK_DURATION=300000
WORKER_RETRY_TIMEOUT=30000

# =============================================================================
# Message Broker (RabbitMQ)
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=procos
RABBITMQ_PASSWORD=procos123
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# PostgreSQL Database (Production)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=procos
POSTGRES_USER=procos
POSTGRES_PASSWORD=procos123

# =============================================================================
# Email Configuration (for email_send tasks)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# AI Worker Configuration
# =============================================================================
# AI Worker settings
AI_WORKER_ID=ai_worker_001
AI_WORKER_MAX_TASKS=5
AI_WORKER_LOCK_DURATION=300000
AI_WORKER_RETRY_TIMEOUT=30000

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_PULL_MODEL=true
OLLAMA_TIMEOUT=120

# AI Worker Strategy
AI_STRATEGY=hybrid  # "openai", "ollama", or "hybrid"
AI_FALLBACK_ENABLED=true  # Use Ollama if OpenAI fails
AI_DEFAULT_PROVIDER=ollama  # "openai" or "ollama"

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
DEV_MODE=true